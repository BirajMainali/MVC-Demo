@model MvcDemo.ViewModel.ClientUpdateVm

@{
    ViewBag.Title = "Update Client";
    Layout = "_Layout";
}

<h2>title</h2>
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Update Client</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <form action="" method="post">
