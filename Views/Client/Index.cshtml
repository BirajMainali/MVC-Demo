@model List<Client>
@{
    ViewData["Title"] = "Client's";
}

<h2>All Client from database</h2>
<hr/>
@if (Model.Count <= 0)
{
    <h3 class="text-center">No data available !!</h3>
}
else
{
    <form asp-action="Index" asp-controller="Client" method="POST">
        <div class="input-group">
            <input type="text" name="ClientAddress" id="search" class="form-control" required autocomplete="off"/>
            <div class="input-group-btn">
                <input type="submit" class="btn btn-primary" value="Search"/>
            </div>
        </div>
    </form>
    <table class="table">
        <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Address</td>
            <td>ClientDate</td>
            <td>Product</td>

        </tr>
        </thead>
        <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Id</td>
                <td>@client.ClientName</td>
                <td>@client.Address</td>
                <td>@client.ClientDate</td>
                <td>@client.Product</td>
            </tr>
        }
        </tbody>
    </table>
}